<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_save_ele"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rgk.mobilemanager.ui.activity.SaveEleActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@color/TC_green8"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_power_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteSmoke"
            android:text="97"
            android:textSize="65dp"/>
        <TextView
            android:id="@+id/tv_power_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_power_num"
            android:paddingTop="10dp"
            android:text="%"
            android:textColor="@color/whiteSmoke"/>

    </RelativeLayout>

</RelativeLayout>
