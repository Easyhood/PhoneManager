<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rubbish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rgk.mobilemanager.ui.activity.RubbishActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TC_green8"
        android:gravity="center"
        android:padding="30dp">
        <RelativeLayout
            android:id="@+id/rl_rubbish_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_rubbish_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="44.40"
                android:textColor="@android:color/white"
                android:textSize="60dp"/>
            <TextView
                android:id="@+id/tv_rubbish_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_rubbish_num"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:textColor="@color/TC_gray4"
                android:text="kb"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tv_rubbish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_rubbish_num"
                android:layout_below="@id/tv_rubbish_large"
                android:paddingLeft="8dp"
                android:paddingTop="20dp"
                android:textColor="@color/TC_gray4"
                android:text="@string/rubbish"/>
        </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_rubbish_activity_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>
